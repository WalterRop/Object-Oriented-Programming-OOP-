class Vehicle:
    def move(self):
        pass  # This will be overridden in subclasses

class Car(Vehicle):
    def move(self):
        return "Driving ğŸš—"

class Plane(Vehicle):
    def move(self):
        return "Flying âœˆï¸"

class Bicycle(Vehicle):
    def move(self):
        return "Cycling ğŸš²"

# Example usage
def vehicle_movement(vehicle):
    print(vehicle.move())

# Create instances
my_car = Car()
my_plane = Plane()
my_bicycle = Bicycle()

# Test polymorphism
vehicle_movement(my_car)      # Output: Driving ğŸš—
vehicle_movement(my_plane)    # Output: Flying âœˆï¸
vehicle_movement(my_bicycle)  # Output: Cycling ğŸš²
